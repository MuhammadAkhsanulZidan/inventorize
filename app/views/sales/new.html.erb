                    <a id="create-sale-btn" name="create-sale-btn" class="m-3 btn btn-primary m-0" style="width: 100px;">Create Sale</button>
                    <a class="m-3 btn btn-secondary m-0" style="width: 100px;" href="/<%=@curr_storage.name%>/items">cancel</a>
